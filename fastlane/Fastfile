fastlane_version "2.57.2"

default_platform :ios

platform :ios do

  desc "Release a new version of FlyoverKit"
  lane :release do |options|
    ensure_git_status_clean
    ensure_git_branch(branch: 'master')
    test
    version = version_bump_podspec(path: "FlyoverKit.podspec", version_number: options[:version])
    git_commit(
      path: ["FlyoverKit.podspec"],
      message: "[FlyoverKit Release ðŸš€] Bump to #{version}"
    )
    add_git_tag(tag: version)
    push_git_tags()
    push_to_git_remote()
    pod_push()
  end

  desc "Runs all the tests"
  lane :test do
    scan(
      project: "FlyoverKit.xcodeproj",
      scheme: "FlyoverKit-tvOS",
      clean: true,
      code_coverage: true
    )
    scan(
      project: "FlyoverKit.xcodeproj",
      scheme: "FlyoverKit-iOS",
      clean: true,
      code_coverage: true
    )
    pod_lib_lint(verbose: true)
  end

  desc "Runs coverage"
  lane :coverage do
    slather(
      proj: "FlyoverKit.xcodeproj",
      scheme: "FlyoverKit-iOS",
      travis: true,
      cobertura_xml: true,
      ignore: ["Tests/*"]
    )
  end
  
end
